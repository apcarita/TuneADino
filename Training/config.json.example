{
  "data_dirs": [
    "/path/to/dataset1",
    "/path/to/dataset2"
  ],
  "pretrained_model": "dinov3_vitl16_pretrain.pth",
  "output_dir": "output/explora",
  "checkpoint_dir": "checkpoints/explora",
  "lora_rank": 8,
  "lora_alpha": 16,
  "unfreeze_last_n_blocks": 2,
  "drop_path_rate": 0.2,
  "training": {
    "batch_size": 32,
    "learning_rate": 2e-3,
    "weight_decay": 0.0,
    "total_epochs": 200,
    "warmup_epochs": 1,
    
    "global_crop_size": 224,
    "local_crop_size": 98,
    "n_local_crops": 8,
    
    "teacher_temp": 0.04,
    "student_temp": 0.1,
    "teacher_temp_final": 0.07,
    "teacher_temp_warmup_epochs": 30,
    
    "ema_momentum_initial": 0.994,
    "ema_momentum_final": 1.0,
    
    "use_mixed_precision": true,
    "head_frozen_iters": 3000,
    
    "koleo_weight": 0.1,
    "ibot_mask_ratio_min": 0.1,
    "ibot_mask_ratio_max": 0.5,
    "ibot_weight": 1.0
  }
}
